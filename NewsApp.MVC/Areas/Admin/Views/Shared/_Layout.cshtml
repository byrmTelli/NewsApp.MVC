﻿@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DailyNews | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsApp.MVC.styles.css" asp-append-version="true" />


</head>
<body>
    <div class="site-wrapper">
        <div class="admin-sidebar">
            <div class="sidebar-content-wrapper">
                <div class="sidebar-brand-wrapper">
                    <h2 class="p-4">DailyNews</h2>
                </div>
                <div class="nav-section">
                    <div class="nav-section-item-wrapper">
                        <i class="fa-solid fa-people-arrows"></i>
                        <a asp-controller="Admin" asp-action="Dashboard" class="nav-section-item text-black">Dashboard</a>
                    </div>
                    <div class="nav-section-item-wrapper">
                        <i class="fa-solid fa-people-arrows"></i>
                        <a asp-controller="Admin" asp-action="Index" class="nav-section-item text-black">Users</a>
                    </div>
                    <div class="nav-section-item-wrapper">
                        <i class="fa-solid fa-people-arrows"></i>
                        <a asp-controller="Admin" asp-action="ManageDepartments" class="nav-section-item text-black">Departments</a>
                    </div>
                    @{
                        if (User.HasClaim(x => x.Type == ClaimTypes.Role && x.Value == "admin"))
                        {
                            <div class="nav-section-item-wrapper">
                                <i class="fa-solid fa-people-arrows"></i>
                                <a asp-controller="Admin" asp-action="AssignCategoryToUser" class="nav-section-item text-black">Roles & Authozirations</a>
                            </div>
                        }
                    }

                    <div class="nav-section-item-wrapper">
                        <i class="fa-solid fa-newspaper"></i>
                        <a asp-controller="Admin" asp-action="ManagePosts" class="nav-section-item text-black" >Posts</a>
                    </div>
                    <div class="nav-section-item-wrapper">
                        <i class="fa-solid fa-newspaper"></i>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-section-item text-black">Homepage</a>
                    </div>
                    <div class="nav-section-item-wrapper">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <a asp-area="" asp-controller="User" asp-action="SignOut" class="nav-section-item text-black">Logout</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="content-navbar bg-dark text-white">
                <i class="fa-solid fa-bars navbar-toggle-icon"></i>
                <div class="navbar-user-info d-flex gap-2 align-items-center justify-content-center">
                    <span class="p-2 text-capitalize">@ViewData["CurrentUser"]</span>
                    <img class="navbar-user-image" src="@ViewData["ProfileImage"]" alt="">
                </div>
            </div><!--here content-navbar-ends-->
            <div class="content-data">
                <div>
                    @RenderBody()
                </div>
            </div>


        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/c9fdab916c.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/41.2.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });


        var js = jQuery.noConflict(true);
        js(document).ready(function () {
            js('#datatable').DataTable({

            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
