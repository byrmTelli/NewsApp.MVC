<div class="col">
    @if (ViewBag.Categories != null && ViewBag.Categories.Count>0)
    {
        foreach (var category in ViewBag.Categories)
        {
            <a>@category.Name</a>
        }
    }

    <form asp-controller="Admin" asp-action="AssignCategoryToUser" method="post">
        <div class="form-group">
            <label for="userId">Kullanıcı ID:</label>
            <input type="text" id="userId" name="userId" class="form-control" />
        </div>
        <div class="form-group">
            <label for="categoryId">Kategori ID:</label>
            <input type="text" id="categoryId" name="categoryId" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Kategoriyi Ata</button>
    </form>
</div>
