@model AppRoleCreateRequestModel


<div class="row p-2">
    <div class="row">
        <div class="col-md-6 offset-3 d-flex flex-column align-items-center justify-content-center">
            <h4>Rol Ekleme</h4>
            <hr />
            <form asp-action="RoleCreate" method="post" class="d-flex flex-column gap-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class=""></label>
                    <input asp-for="Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <input type="submit" value="Oluştur" class="btn btn-outline-dark"/>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}