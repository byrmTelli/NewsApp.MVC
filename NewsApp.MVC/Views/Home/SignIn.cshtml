﻿
@{
    ViewData["Title"] = "SignIn";
}
@section Scripts
{

    @await Html.PartialAsync("_ValidationScriptsPartial");

}

@model AppUserLoginRequestModel
<div class="container">
    <div class="row align-items-center justify-cotent-center">
        <div class="col-md-8 offset-md-2 d-flex">
            <div class="col-6 border d-flex p-4 bg-light rounded-3 justify-content-center align-items-center  login-wrapper">
                <img src="https://cdni.iconscout.com/illustration/premium/thumb/login-page-2578971-2147152.png?f=webp" style="width:200px;" />
            </div>
            <div class="col-6 rounded-3 border d-flex flex-column align-items-center justify-content-center  login-wrapper">
                <h4 class="fw-bold">LOGIN</h4>
                <div class="row d-flex align-items-center justify-content-center p-4">
                    <div class="alert alert-danger" asp-validation-summary=ModelOnly role="alert">
                    </div>
                    <form asp-controller="Home" asp-action="SignIn" asp-route-returnurl="@Context.Request.Query["returnURL"]" method="post">
                        <div class="mb-3">
                            <div class="d-flex align-items-center gap-1 border p-1">
                                <label asp-for="Email" class="form-label mt-1"><i class="fa-solid fa-circle-user login-icon"></i></label>
                                <input class="custom-input" asp-for="Email" placeholder="Username" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex align-items-center gap-1 border p-1">
                                <label asp-for="Password" class="form-label mt-1 hidden"><i class="fa-solid fa-unlock login-icon"></i></label>
                                <input type="password" class="custom-input" asp-for="Password" placeholder="Password" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-center">
                            <a asp-controller="Home" asp-action="ForgetPassword" class="btn btn-link">Şifremi Unuttum</a>
                        </div>
                        <div class="d-flex justify-content-between form-check">
                            <div class="">
                                <label class="form-check-label" asp-for="RememberMe" for="RememberMe">Remember</label>
                                <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                            </div>
                            <button type="submit" class="btn btn-dark">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
