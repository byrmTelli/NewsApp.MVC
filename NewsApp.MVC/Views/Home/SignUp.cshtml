﻿@{
    ViewData["Title"] = "SignUp";
}

@model AppUserRegisterRequestModel


@section  Scripts 
{

    @await Html.PartialAsync("_ValidationScriptsPartial");

}
<div class="row p-3 mt-4 shadow border rounded-3">
    <div class="col-md-8 offset-md-2">
        <h5 class="text-start">Sign Up</h5>
        <hr/>

        @if(TempData["SuccessMessage"]!=null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>   
        }

            <div class="alert alert-danger" asp-validation-summary=ModelOnly role="alert">
            </div>   

        <form asp-controller="Home" asp-action="SignUp" method="post">
                    <div class="row">
                        <div class="col-md-6 login-wrapper">
                            <div class="row mb-3">
                        <label for="Username" asp-for="Username" class="col-md-4 col-form-label fw-bold"></label>
                        <div class="col-md-8">
                            <input class="form-control" asp-for="Username" autocomplete="off">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
            

                    <div class="row mb-3">
                        <label for="Email" asp-for="Email" class="col-md-4 col-form-label fw-bold"></label>
                        <div class="col-md-8">
                            <input class="form-control" asp-for="Email" type="email" autocomplete="off">
                             <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
            
                    <div class="row mb-3">
                        <label for="Password" asp-for="Password" class="col-md-4 col-form-label fw-bold"></label>
                        <div class="col-md-8">
                            <input class="form-control" asp-for="Password" type="password" autocomplete="off">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="ConfirmPassword" asp-for="ConfirmPassword" class="col-md-4 col-form-label fw-bold"></label>
                        <div class="col-md-8">
                            <input class="form-control" asp-for="ConfirmPassword" type="password" autocomplete="off">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <label for="Phone" asp-for="Phone" class="col-md-4 col-form-label fw-bold"></label>
                        <div class="col-md-8">
                        <input 
                            class="form-control" 
                            asp-for="Phone" 
                            type="tel" 
                            autocomplete="off" 
                            placeholder="(5**) *** ****" 
                            pattern="[0-9]{3} [0-9]{3} [0-9]{2} [0-9]{2}"
                            title="Telefon numarası formatı: 555 123 4567"/>

                        </div>
                    </div>
                </div>


                <div class="col">
                    <div class="row mb-3">
                    <label for="Name" asp-for="Name" class="col-md-4 col-form-label fw-bold"></label>
                    <div class="col-md-8">
                        <input class="form-control" asp-for="Name" autocomplete="off">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="Surname" asp-for="Surname" class="col-md-4 col-form-label fw-bold"></label>
                    <div class="col-md-8">
                        <input class="form-control" asp-for="Surname" autocomplete="off">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="BirthDate" class="col-md-4 col-form-label fw-bold"></label>
                    <div class="col-md-8">
                        <input class="form-control" asp-for="BirthDate" type="date" autocomplete="off">
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>

                 <div class="row mb-3">
                    <label asp-for="HomeLand" class="col-md-4 col-form-label fw-bold"></label>
                    <div class="col-md-8">
                        <input class="form-control" asp-for="HomeLand" type="text" autocomplete="off">
                        <span asp-validation-for="HomeLand" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-8 offset-md-4 d-flex align-items-center justify-content-end flex-column">
                        <p class="text-justify">Kayıt işleminiz sırasında kabul etmeniz gereken            <button type="button" class="privacy-policy-button" data-bs-toggle="modal" data-bs-target="#exampleModalLong">
 
"Gizlilik Politikası"</button> metnini lütfen okuyunuz.</p>
                            <span asp-validation-for="PrivacyPolicy" class="text-danger"></span>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Gizlilik Politikası</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
