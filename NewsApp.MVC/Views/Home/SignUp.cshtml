                            <label asp-for="PrivacyPolicy"></label>
                            <input asp-for="PrivacyPolicy" class="form-check"/>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-8 offset-md-4 d-flex align-items-center justify-content-end">
                        <button type="submit" class="btn btn-dark">Submit</button>
                    </div>
                </div>
                </div>
            </div>
            
        </form>    
    </div>
</div